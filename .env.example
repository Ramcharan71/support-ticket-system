# ============================================================
# Environment Variables — Copy to .env and fill in your values
# ============================================================

# Google Gemini API Key (get one free at https://aistudio.google.com/apikey)
# The app works without it — AI classification will gracefully degrade.
GEMINI_API_KEY=your_gemini_api_key_here

# Django secret key — change this in production!
DJANGO_SECRET_KEY=change-me-in-production-use-a-real-secret-key

# Debug mode (set to False in production)
DEBUG=True

# PostgreSQL credentials (used by Docker Compose)
POSTGRES_DB=tickets_db
POSTGRES_USER=tickets_user
POSTGRES_PASSWORD=tickets_pass
DB_HOST=db
DB_PORT=5432

# Set to True to use SQLite instead of PostgreSQL (for local dev without Docker)
USE_SQLITE=False
